<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MultiSelectSpinnerView">
        <attr name="dropdown_headerSelectAll_text" format="string"/>
        <attr name="dropdown_footerConfirm_text" format="string"/>
        <attr name="placeholder_text" format="string"/>
        <attr name="confirmTextColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="SearchableSpinner">
        <attr name="showSearch" format="boolean"/>
        <attr name="label_color" format="color"/>
        <attr name="selected_item_color" format="color"/>
        <attr name="label_text_size" format="dimension"/>
        <attr name="label_hint" format="string"/>
        <attr name="label_error" format="string"/>
        <attr name="label_alignment" format="integer"/>
        <attr name="disabled" format="boolean"/>
        <attr name="sort" format="boolean"/>
        <attr name="clear_selection" format="boolean"/>
    </declare-styleable>


    <attr name="hintText" format="string" />
    <attr name="highlightSelected" format="boolean" />
    <attr name="highlightColor" format="color" />
    <attr name="textColor" format="color" />
    <attr name="clearText" format="string" />

    <declare-styleable name="MultiSpinnerSearch">
        <attr name="hintText" />
        <attr name="highlightSelected" />
        <attr name="highlightColor" />
        <attr name="textColor" />
        <attr name="clearText" />
    </declare-styleable>
    <declare-styleable name="SingleSpinnerSearch">
        <attr name="hintText" />
        <attr name="highlightSelected" />
        <attr name="highlightColor" />
        <attr name="textColor" />
        <attr name="clearText" />
    </declare-styleable>
</resources>